<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">



  <!--============================================================
	Authentication filter
    =============================================================-->

  <!--filter check exist session for sign in-->
  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>ua.epam.filter.AuthFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/</url-pattern>
  </filter-mapping>

  <!--============================================================
	Encoding support filter
    =============================================================-->

  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>ua.epam.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!--============================================================
  Servlets
  =============================================================-->

  <!--Logout servlet-->
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>ua.epam.servlets.logout.LogoutServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>


  <!--Index-->
<servlet>
  <servlet-name>AdminMenu</servlet-name>
  <servlet-class>ua.epam.servlets.adminServlets.GetAllUsers</servlet-class>
</servlet>
  <servlet-mapping>
    <servlet-name>AdminMenu</servlet-name>
    <url-pattern>/allUsers</url-pattern>
  </servlet-mapping>

  <!--AddUserServlet-->
  <servlet>
    <servlet-name>addUser</servlet-name>
    <servlet-class>ua.epam.servlets.adminServlets.AddUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>addUser</servlet-name>
    <url-pattern>/addUser</url-pattern>
  </servlet-mapping>

  <!--DeleteUserServlet-->
  <servlet>
    <servlet-name>dellUser</servlet-name>
    <servlet-class>ua.epam.servlets.adminServlets.DeleteUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>dellUser</servlet-name>
    <url-pattern>/dellUser</url-pattern>
  </servlet-mapping>

  <!--UpdateUserServlet-->
  <servlet>
    <servlet-name>updateUser</servlet-name>
    <servlet-class>ua.epam.servlets.adminServlets.UpdateUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>updateUser</servlet-name>
    <url-pattern>/updateUser</url-pattern>
  </servlet-mapping>

<!--FindUserServlet-->
  <servlet>
    <servlet-name>findUsers</servlet-name>
    <servlet-class>ua.epam.servlets.adminServlets.FindUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>findUsers</servlet-name>
    <url-pattern>/findUsers</url-pattern>
  </servlet-mapping>
  <!--============================================================
  Context listener
  =============================================================-->
  <listener>
    <listener-class>ua.epam.servlets.ContextListener</listener-class>
  </listener>



</web-app>